page {
  padding-bottom: 20rpx;
}
page .goodsdetail .spe .swiperbox {
  height: 500rpx;
}
page .goodsdetail .spe .swiperbox .swiperitem {
  padding: 5rpx 10rpx;
}
page .goodsdetail .price {
  padding-left: 5rpx;
  margin-top: 10rpx;
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: bolder;
}
page .goodsdetail .introuduce {
  display: flex;
  padding: 10rpx;
  border-bottom: 10rpx solid #ccc;
}
page .goodsdetail .introuduce .introducegoods {
  flex: 5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
page .goodsdetail .introuduce .detail_name_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #ccc;
}
page .goodsdetail .detail {
  margin-bottom: 10rpx;
}
page .goodsdetail .detail .ttitle {
  color: var(--themeColor);
  font-size: 32rpx;
  margin: 15rpx;
  padding-left: 5rpx;
  font-weight: bolder;
}
page .goodsdetail .tablan {
  position: fixed;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
  display: flex;
  border-top: 2rpx solid #ccc;
  background-color: #fff;
}
page .goodsdetail .tablan .heihei {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 21rpx;
}
page .goodsdetail .tablan .heihei button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
page .goodsdetail .tablan .cart {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #ffa500;
  font-size: 24rpx;
}
page .goodsdetail .tablan .buy {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  background-color: var(--themeColor);
}
